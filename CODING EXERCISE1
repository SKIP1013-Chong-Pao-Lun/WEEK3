package math;

public class CylinderComputation {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		double radius, height, surfaceArea,baseArea,volume;
		// Declare a double to hold PI.
		// Declare as "final" to specify that its value cannot be changed (i.e. constant).
		final double PI = 3.14159265;

		// Assign a value to radius. (We shall read in the value from the keyboard later.)
		radius = 1.2;
		height=2.0;
		// Compute area and circumference
		surfaceArea = (2*PI*radius)*(height+radius);
		baseArea = radius * radius * PI;
		volume= radius*radius* height*PI;

		// Print results
		System.out.print("The total surface area is "); // Print description
		System.out.println(surfaceArea); // Print the value stored in the variable
		System.out.print("The base area is ");
		System.out.println(baseArea);
		System.out.printf("The volume is %.2f",volume);
	}

}





package math;

public class RectangleComputation {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		double length,width, area, perimeter;
		// Declare a double to hold PI.
		// Declare as "final" to specify that its value cannot be changed (i.e. constant).
		final double PI = 3.14159265;

		// Assign a value to radius. (We shall read in the value from the keyboard later.)
		length = 1.2;
		width=2.0; 
		// Compute area and circumference
		area = length * width;
		perimeter= 2*(length+width);
		

		// Print results
		System.out.print("The perimeter is "); // Print description
		System.out.println(perimeter); // Print the value stored in the variable
		System.out.printf("The area is %.2f",area);
		

	}

}

